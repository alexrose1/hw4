<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<div class="row">
  <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
      <h4>
        <%# find user who created post %>
        <% your_posts = Post.find_by({ "user_id" => session["user_id"] }) %>
        
        <%# handle any potential bad data where the post is missing a user %>
        
        <%= post["title"] %>
      </h4>

      <p>Posted On: <%= post["posted_on"] %> </p>


            <% if post.uploaded_image.attached? %>
              <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
            <% else %>
              <img src="<%= post["image"] %>" class="img-fluid">
            <% end %>

      <p><%= post["description"] %> </p>      
    </div>
  <% end %>

  <p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>
</div>


